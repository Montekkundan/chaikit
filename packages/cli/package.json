{
  "name": "chaikit",
  "version": "1.0.1",
  "description": "CLI for the repo",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": {
    "name": "montekkundan",
    "url": "https://www.montek.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/montekkundan/chaikit.git",
    "directory": "packages/cli"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "ui",
    "tailwind",
    "framer-motion",
    "templates",
    "react",
    "astro"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "chaikit": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.js",
    "start:dev": "cross-env REGISTRY_URL=http://localhost:3000/__registry__/template.json node dist/index.js",
    "test": "vitest run",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "pub:beta": "pnpm build && pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm build && pnpm publish --no-git-checks --access public --tag next",
    "pub:release": "pnpm build && pnpm publish --access public",
    "release:full": "pnpm changeset && pnpm changeset version && pnpm build && pnpm publish --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@repo/typescript-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "cross-env": "^7.0.3",
    "typescript": "latest",
    "vitest": "^2.0.2"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.10",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^10.0.1",
    "node-fetch": "^3.3.2",
    "tsup": "^8.1.0",
    "type-fest": "^4.21.0"
  }
}
